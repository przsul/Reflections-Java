                        <TextField fx:id="classTextField" text="application.Student" HBox.hgrow="ALWAYS" />
                        <Button fx:id="createButton" mnemonicParsing="false" onAction="#createObject" text="Create object" />
                        <Button fx:id="saveButton" disable="true" mnemonicParsing="false" onAction="#saveObject" text="Save object" />
                     </children>
                  </HBox>
               </children>
            </VBox>
         </children>
      </AnchorPane>
   </content>
</ScrollPane>
